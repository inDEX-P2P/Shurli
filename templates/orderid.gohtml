                    <div class="col-3 text-left">
                      <small>RECEIVE</small>
                    </div>
                    <div class="col-9 text-right">
                      <small>{{.RelBal}} - CURRENT BALANCE</small>
                    </div>
                  </div>
                </div> <!-- rel trading pair header end -->
                <div class="card-body" style="padding: 3px;">
                  <div class="row"> <!-- card-body row start -->
